{
  "name": "whatsapp-clone",
  "version": "1.0.0",
  "description": "A full-stack real-time chat application",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run server",
    "client": "cd client && npm run dev",
    "install-deps": "cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "deploy-prep": "node deploy.js",
    "vercel-deploy": "cd server && vercel --prod",
    "netlify-deploy": "cd client && npm run build && netlify deploy --prod --dir=dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["chat", "whatsapp", "react", "nodejs", "socket.io"],
  "author": "",
  "license": "MIT"
}